
<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>" >
  <%= f.label :city, class:"form-label label-style-point" %>
  <%= f.text_field :city, class:"form-control space-style-city" %>

    <div data-controller="flatpickr" class="my-3 div-flex">
      <div>
        <%= f.label :arrival, class:"form-label label-style-point" %>
        <%= f.text_field :start_date, data: { flatpickr_target: "startDate" }, class:"space-style-step1"  %>
      </div>
      <div>
        <%= f.label :departure, class:"form-label label-style-point" %>
        <%= f.text_field :end_date, data: { flatpickr_target: "endDate" }, class:"space-style-step1" %>
      </div>
    </div>

  <% if false %>
    <%= f.label :description, class:"form-label label-style-point" %>
    <%= f.text_field :description, class:"form-control" %>
    <%= f.label :budget_day, class:"form-label label-style-point" %>
    <%= f.text_field :budget_day, class:"form-control" %>
    <%= f.label :local_language, class:"form-label label-style-point" %>
    <%= f.text_field :local_language, class:"form-control space-style-step2" %>
  <% end %>

  <div>
    <%= f.label "local currency", class:"form-label label-style-point" %>
    <%= f.text_field :currency, class:"form-control space-style-city" %>
  </div>

  <%= f.label :housing_type, class:"form-label label-style-point" %>
  <%= f.text_field :housing_type, class:"form-control" %>
  <%= f.label :visits_activities, class:"form-label label-style-point" %>
  <%= f.text_field :visits_activities, class:"form-control" %>

  <button type="button" data-action="nested-form#remove">Remove point</button>

  <%= f.hidden_field :_destroy %>
</div>
