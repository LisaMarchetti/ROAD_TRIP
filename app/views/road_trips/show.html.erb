  <div class="road-trip-show-details">
    <div>
      <ul class="list-inline">
        <li><h5>continent(s):</h5>
        <% @points.each do |point| %>
            <p><%= point.continent %></p>
           <% end %>
        </li>
        <li><h5>country(ies):</h5>
        <% @points.each do |point| %>
            <p><%= point.country %></p>
           <% end %>
        </li>
        <li><h5>city(ies):</h5>
        <% @points.each do |point| %>
            <p><%= point.city %> - start : <%= point.start_date %> - end : <%= point.end_date %></p>
           <% end %>
        </li>
        <li><h5>spoken language(s):</h5>
          <p><%= @road_trip.native_language %></p>
          <p><%= @road_trip.other_language %></p>
        </li>
      </ul>

  <div class="d-flex">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://images.pexels.com/photos/12510146/pexels-photo-12510146.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
