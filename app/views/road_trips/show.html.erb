
<div class="container-white">
  <h1 class="road-trip-title"><%= @road_trip.title %></h1>
  <%= image_tag @road_trip.photo, class: "trip-image" %>

  <div class="p-description">
    <p>"<%= @road_trip.description %>"
    </p>
    <p><%= @road_trip.user.first_name %>
    </p>
  </div>

