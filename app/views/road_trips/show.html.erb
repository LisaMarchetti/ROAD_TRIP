
<div class="container-white">
  <h1 class="road-trip-title"><%= @road_trip.title %></h1>
  <%= image_tag @road_trip.photo, class: "trip-image" %>
  <div class="description-container">
    <div class="p-description">
      <p>"<%= @road_trip.description %>"</p>
    </div>
    <div class="p-description-user-signature">
      <p><%= @road_trip.user.first_name %>.</p>
    </div>
  </div>

  <div class="road-trip-show-details-container">
    <h4>Route details</h4>
    <div class="route-info-container">
      <ul class="list-inline">
        <li><h5>Continent:</h5>
        <% @points.each do |point| %>
            <p><%= point.continent %></p>
           <% end %>
        </li>
        <li><h5>Country:</h5>
        <% @points.each do |point| %>
            <p><%= point.country %></p>
           <% end %>
        </li>
        <li><h5>City:</h5>
        <% @points.each do |point| %>
            <p><%= point.city %>
           <% end %>
        </li>
        <li><h5>Arrival:</h5>
        <% @points.each do |point| %>
            <p><%= point.start_date %></p>
           <% end %>
        </li>
        <li><h5>Departure:</h5>
        <% @points.each do |point| %>
            <p><%= point.end_date %></p>
           <% end %>
        </li>
      </ul>
    </div>

    <div class="other-info-container">
      <li><h5>Spoken languages:</h5>
        <p><%= @road_trip.native_language %></p>
        <p><%= @road_trip.other_language %></p>
      </li>
    </div>
  </div>

  <div>
    <% if @participation == nil %>
    <%= link_to "I want to participate", road_trip_participations_path(@road_trip) %>
    <% end %>
  </div>

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @road_trips.each_with_index do |road_trip, i| %>
              <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
                <%= render 'road_trip_card',  road_trip: road_trip %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
  </div>
</div>
